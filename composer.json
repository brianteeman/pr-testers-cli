{
  "name": "martina/github-comment",
  "description": "Joomla CLI script to fetch merged PR comments via GitHub GraphQL",
  "type": "project",
  "require": {
    "symfony/console": "^7.0",
    "symfony/dotenv": "^7.0",
    "joomla/http": "^4.0",
    "joomla/filter": "^4.0",
    "joomla/console": "^4.0",
    "joomla/language": "^4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.86"
  },
  "scripts": {
    "csfixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff -vvv",
    "csfixer:fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff -vvv"
  }
}
